{
  "name": "av-theme",
  "description": "nuxt theme",
  "type": "module",
  "version": "0.0.7",
  "main": "./nuxt.config.ts",
  "scripts": {
    "dev": "nuxi prepare & nuxi dev .playground",
    "build": "nuxi build .playground",
    "generate": "nuxi generate .playground",
    "preview": "nuxi preview .playground",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "cypress:install": "cypress install",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:dev": "start-server-and-test dev http://localhost:3000 'cypress open --config baseUrl=http://localhost:3000'",
    "cypress:local": "start-server-and-test serve http://localhost:3000 cypress:run --config baseUrl=http://localhost:3000",
    "lint": "eslint",
    "lint:fix": "eslint . --fix",
    "fulltest": "rm -rf node_modules && pnpm i && pnpm run lint && pnpm run coverage && pnpm run cypress:local",
    "release": "release-it"
  },
  "dependencies": {
    "@nuxt/content": "^2.2.2",
    "@nuxt/image-edge": "1.0.0-27840416.dc1ed65",
    "@nuxt/kit": "^3.0.0",
    "@nuxtjs/google-fonts": "3.0.0-1",
    "@nuxtjs/i18n": "npm:@nuxtjs/i18n-edge",
    "@nuxtjs/tailwindcss": "^6.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@vueuse/core": "^9.6.0",
    "@vueuse/nuxt": "^9.6.0",
    "animate.css": "^4.1.1",
    "nuxt-config-schema": "^0.3.4",
    "nuxt-icon": "^0.1.8",
    "remark-directive-rehype": "^0.4.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.33.1",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@vitest/coverage-c8": "^0.25.7",
    "cypress": "^12.0.2",
    "eslint": "^8.29.0",
    "nuxt": "^3.0.0",
    "release-it": "^15.5.1",
    "start-server-and-test": "^1.15.2",
    "typescript": "^4.9.4",
    "vitest": "^0.25.7"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "axios": "0.25.0"
      },
      "ignoreMissing": [
        "postcss",
        "postcss-*",
        "webpack",
        "axios"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
